      <Button fx:id="checkSpelling" defaultButton="true" layoutX="951.0" layoutY="375.0" mnemonicParsing="false" prefHeight="90.0" prefWidth="105.0" text="Check Spelling" />
      <Label fx:id="translationHint" layoutX="276.0" layoutY="185.0" />
      <ImageView fx:id="stones" fitHeight="148.0" fitWidth="457.0" layoutX="451.0" layoutY="802.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../stones.png" />
         </image></ImageView>
      <ImageView fx:id="frog" fitHeight="30.0" fitWidth="37.0" layoutX="468.0" layoutY="819.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../frog.png" />
         </image>
      </ImageView>
      <ImageView fx:id="helpWindow" fitHeight="546.0" fitWidth="365.0" layoutX="972.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../helpwindow.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="helpBtn" fitHeight="90.0" fitWidth="98.0" layoutX="1240.0" layoutY="21.0" onMouseClicked="#selectHelp" onMouseEntered="#enterHelp" onMouseExited="#exitHelp" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../helpfade.jpg" />
         </image>
      </ImageView>
      <Button layoutX="594.0" layoutY="215.0" mnemonicParsing="false" onAction="#rewardScreen" text="Results" />
   </children>
</AnchorPane>
