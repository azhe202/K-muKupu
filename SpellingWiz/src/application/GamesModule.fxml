<AnchorPane maxHeight="900" maxWidth="1350" minHeight="900" minWidth="1350" prefHeight="900.0" prefWidth="1350" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.GamesModule">
   <children>
      <ImageView fitHeight="907.0" fitWidth="1358.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../background.jpg" />
         </image>
      </ImageView>
      <Label fx:id="wordLength" alignment="CENTER" layoutX="239.0" layoutY="64.0" prefHeight="125.0" prefWidth="834.0">
         <font>
            <Font size="48.0" />
         </font></Label>
      <TextField fx:id="textField" layoutX="257.0" layoutY="375.0" prefHeight="90.0" prefWidth="678.0" promptText="Type word here">
         <font>
            <Font size="40.0" />
         </font></TextField>
      <Button fx:id="repeatWordBtn" layoutX="257.0" layoutY="507.0" mnemonicParsing="false" onAction="#wordRepeat" prefHeight="99.0" prefWidth="177.0" text="Repeat" />
